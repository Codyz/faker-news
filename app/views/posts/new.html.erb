<h1>Submit A Link</h1>
<%= form_for(@post) do |f| %>

  <%=f.label :title %>
  <%=f.text_field :title %>

  <%=f.label :url %>
  <%=f.text_field :url %>

  <%# f.hidden_field :user_id, cookie %>

  <%=f.fields_for(:comments) do |c| %>
    <%=c.label :body%>
    <%=c.text_area :body%>

    <%# c.hidden_field :user_id, cookie %>
  <%end%>

  <%= f.submit "Submit" %>
<% end %>
